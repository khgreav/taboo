# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project
root = true

# Default settings
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# Vue files
[*.vue]
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2
