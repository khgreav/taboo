{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "reconnect",
  "type": "object",
  "required": ["type", "playerId", "sessionToken"],
  "additionalProperties": false,
  "properties": {
    "type": {
      "title": "Message type",
      "const": "reconnect"
    },
    "playerId": {
      "title": "Player ID",
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "null"
        }
      ]
    },
    "sessionToken": {
      "title": "Session token",
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "null"
        }
      ]
    },
    "name": {
      "title": "Player name",
      "type": "string",
      "minLength": 1
    }
  }
}
