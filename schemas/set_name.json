    "required": [
        "type",
        "name"
    ],
    "additionalProperties": false,
    "properties": {
        "type": {
            "title": "Message type",
            "const": "connect"
        },
        "name": {
            "title": "Player name",
            "type": "string",
            "minLength": 1
        }
    }
}