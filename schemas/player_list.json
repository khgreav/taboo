{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "player_list",
  "type": "object",
  "required": ["type", "players"],
  "additionalProperties": false,
  "properties": {
    "type": {
      "title": "Message type",
      "const": "player_list"
    },
    "players": {
      "title": "List of players",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "team", "isReady", "connected"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "title": "Player ID",
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "title": "Player name",
            "type": "string",
            "minLength": 1
          },
          "team": {
            "title": "Team",
            "type": "integer",
            "enum": [-1, 0, 1]
          },
          "isReady": {
            "title": "Player ready status",
            "type": "boolean"
          },
          "connected": {
            "title": "Player connection status",
            "type": "boolean"
          }
        }
      }
    }
  }
}
